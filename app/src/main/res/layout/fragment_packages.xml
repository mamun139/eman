                    android:layout_height="wrap_content"
                    android:background="@drawable/border_style"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:weightSum="13">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="5dp"
                        android:text="@string/label_promo_code"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBasic"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etPromoCode"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="7"
                        android:background="@drawable/border_style"
                        android:singleLine="true" />

                    <Button
                        android:id="@+id/btnApplyPromo"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="6"
                        android:background="@drawable/shape_round"
                        android:text="@string/label_button_apply"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btnPackageConfirm"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_round"
                android:text="@string/label_button_next"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>