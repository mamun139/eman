<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jarvishub.emandemo.ui.createOrder.CreateOrderFragment">

    <LinearLayout
        android:id="@+id/llCreateOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLightGrey"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewServicePackages"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/card_items_margin"
                    android:layout_marginRight="@dimen/card_items_margin"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:padding="10dp">


                    <LinearLayout
                        android:id="@+id/linearLayoutServicePackages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_style"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:text="Package Information"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBasic"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="3dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="@string/label_price" />

                                        <TextView
                                            android:id="@+id/tvPriceOfPackage"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="80 tk"
                                            android:textColor="@color/colorBasic"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:id="@+id/textView9"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="@string/label_time" />

                                        <TextView
                                            android:id="@+id/tvTimeOfPackage"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:text="8 Hours"
                                            android:layout_weight="1"
                                            android:textColor="@color/colorBasic"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="3dp"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="âœ“Type:" />


                                        <TextView
                                            android:id="@+id/tvSizeOfPackage"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:text="Parcel"
                                            android:layout_weight="1"
                                            android:textColor="@color/colorBasic"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:text="@string/label_weight" />

                                        <TextView
                                            android:id="@+id/tvMaxWeightOfPackage"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:text="500 Gm"
                                            android:layout_weight="1"
                                            android:textColor="@color/colorBasic"
                                            android:textSize="16sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@drawable/horizontal_line" />



                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:background="@drawable/horizontal_line" />
                </LinearLayout>-->


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_items_margin"
                    android:layout_marginRight="@dimen/card_items_margin"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:background="@drawable/border_style">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_style"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:text="Address"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBasic"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_style"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Collection"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:weightSum="6">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:paddingStart="@dimen/card_padding"
                                    android:paddingEnd="@dimen/card_padding"
                                    android:text="@string/label_sender_address"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvCollectionAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text=""
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:weightSum="6">

                                <TextView

                                    android:id="@+id/textView7"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:paddingStart="@dimen/card_padding"
                                    android:paddingEnd="@dimen/card_padding"
                                    android:text="Time:"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvCollectionTime"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text=""
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border_style"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Delivery"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:weightSum="6">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:paddingStart="@dimen/card_padding"
                                    android:paddingEnd="@dimen/card_padding"
                                    android:text="@string/label_sender_address"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDeliveryAddress"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:text=""
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="4dp"
                                android:weightSum="6">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Time:"
                                    android:paddingStart="@dimen/card_padding"
                                    android:paddingEnd="@dimen/card_padding"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvDeliveryTime"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:text=""
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/card_items_margin"
                    android:layout_marginRight="@dimen/card_items_margin"
                    android:layout_marginTop="@dimen/card_items_margin"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvCollectionDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:text="Collection Details"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBasic"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tiCollectionName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:theme="@style/TextLabel">

                                <EditText
                                    android:id="@+id/etSenderName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:hint="Sender Name"
                                    android:inputType="textPersonName" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tiCollectionMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:theme="@style/TextLabel">

                                <EditText
                                    android:id="@+id/etSenderMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:hint="Sender Mobile"
                                    android:inputType="phone"
                                    android:textSize="15sp" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/label_collection_instruction"
                                android:textColor="@color/colorBasic"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/radioGroupCollectionInstruction"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:weightSum="2">

                                <RadioButton
                                    android:id="@+id/radioWantToNotify"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Want to notify" />

                                <RadioButton
                                    android:id="@+id/radioDontNotify"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="Don't notify" />

                            </RadioGroup>

                            <LinearLayout
                                android:id="@+id/llNotificationCheckBox"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:visibility="gone"
                                android:weightSum="4">

                                <CheckBox
                                    android:id="@+id/checkBoxCall"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/label_call" />

                                <CheckBox
                                    android:id="@+id/checkboxSms"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/label_sms" />

                                <CheckBox
                                    android:id="@+id/checkboxApp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/label_app" />

                                <CheckBox
                                    android:id="@+id/checkboxEmail"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/label_email" />
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_items_margin"
                    android:layout_marginRight="@dimen/card_items_margin"
                    android:layout_marginTop="@dimen/card_items_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDeliverDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Delivery Details"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBasic"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tiSenderPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:theme="@style/TextLabel">

                                <EditText
                                    android:id="@+id/etReceiverName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:hint="Receiver Name"
                                    android:inputType="textPersonName" />

                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tiSenderMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:theme="@style/TextLabel">

                                <EditText
                                    android:id="@+id/etReceiverMobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:hint="Receiver Mobile"
                                    android:inputType="phone"
                                    android:textSize="15sp" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/tiDeliveryInstruction"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:theme="@style/TextLabel">

                                <EditText
                                    android:id="@+id/etDeliveryInstruction"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:hint="Receiver Instruction"
                                    android:inputType="textPersonName" />

                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_items_margin"
                    android:layout_marginRight="@dimen/card_items_margin"
                    android:layout_marginTop="@dimen/card_items_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvPaymentPolicy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="6"
                            android:gravity="center"
                            android:text="Payment Policy"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBasic"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Cash On Delivery"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Cash On Collection"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Invoice"
                                android:textSize="12sp" />

                        </LinearLayout>


                        <RadioGroup
                            android:id="@+id/radioPaymentMethod"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="2dp"
                            android:orientation="horizontal"
                            android:padding="5dp"
                            android:weightSum="3">

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/radioCashDelivery"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:button="@android:color/transparent"
                                android:drawableTop="@drawable/cash_on_delivery"
                                android:padding="6dp" />

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/radioCashReceive"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:button="@android:color/transparent"
                                android:drawableTop="@drawable/cash_on_collection"
                                android:gravity="center"
                                android:padding="6dp" />

                            <android.support.v7.widget.AppCompatRadioButton
                                android:id="@+id/radioInvoice"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/border_style"
                                android:button="@android:color/transparent"
                                android:drawableTop="@drawable/invoice"
                                android:gravity="center"
                                android:padding="6dp" />
                        </RadioGroup>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/card_items_margin"
                    android:layout_marginRight="@dimen/card_items_margin"
                    android:layout_marginTop="@dimen/card_items_margin">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/cbTermsCondition"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/tvTermsCondition"
                            android:gravity="center"
                            android:text="@string/label_terms_conditions"
                            android:autoLink="all"
                            android:clickable="true"
                            android:textColor="#3949ab"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btnConfirmOrder"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorBasic"
                    android:text="Confirm" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</FrameLayout>
