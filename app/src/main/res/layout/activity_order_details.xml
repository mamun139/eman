<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3f51b5"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#f5f6f9"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="@string/toolbar_order_details"
            />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/text_padding"
                android:text="@string/label_collection"
                android:textColor="@color/colorBasic"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCollectionName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/text_padding"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/colorFont" />

            <TextView
                android:id="@+id/tvCollectionAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/text_padding"
                android:textSize="12sp"
                android:text="Address"
                android:textColor="@color/colorFont" />

            <TextView
                android:id="@+id/tvCollectionContact"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/text_padding"
                android:text="Contact"
                android:textColor="@color/colorFont" />

            <TextView
                android:id="@+id/tvCollectionDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/text_padding"
                android:text="Date"
                android:textColor="@color/colorFont" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/label_delivery"
                android:textSize="17sp"
                android:padding="@dimen/text_padding"
                android:textColor="@color/colorBasic"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDeliveryName"
                android:padding="@dimen/text_padding"
                android:textStyle="bold"
                android:textColor="@color/colorFont"
                android:text="Name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDeliverAddress"
                android:textColor="@color/colorFont"
                android:textSize="12sp"
                android:padding="@dimen/text_padding"
                android:text="Address"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDeliveryContact"
                android:textColor="@color/colorFont"
                android:padding="@dimen/text_padding"
                android:text="Contact"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tvDeliveryDate"
                android:textColor="@color/colorFont"
                android:padding="@dimen/text_padding"
                android:text="Date"/>

        </LinearLayout>


    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_order_tracking_no"
            android:textColor="@color/colorFont"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:id="@+id/tvOrderTrack"
            android:textStyle="bold"
            android:textColor="@color/colorFont"
            android:text=""
            android:layout_weight="1"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_order_price"
            android:padding="5dp"
            android:textColor="@color/colorFont"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvOrderPrice"
            android:text=""
            android:padding="5dp"
            android:textColor="@color/colorBasic"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_discount"
            android:padding="5dp"
            android:textColor="@color/colorFont"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvDiscount"
            android:text=""
            android:padding="5dp"
            android:textColor="@color/colorBasic"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_payment_amount"
            android:padding="5dp"
            android:textColor="@color/colorFont"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvPaymentAmount"
            android:text=""
            android:padding="5dp"
            android:textColor="@color/colorBasic"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_payment_method"
            android:padding="5dp"
            android:textColor="@color/colorFont"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvPaymentMethod"
            android:text=""
            android:padding="5dp"
            android:textColor="@color/colorBasic"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/label_status"
            android:textColor="@color/colorFont"
            android:padding="5dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvOrderStatus"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/colorBasic"
            android:layout_weight="1"
            />
    </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>

</LinearLayout>